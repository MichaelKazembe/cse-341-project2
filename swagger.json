{
  "swagger": "2.0",
  "info": {
    "title": "Restaurants API",
    "description": "API documentation for the cse-341 project - Restaurants RESTful API",
    "version": "1.0.0",
    "contact": {
      "name": "Michael Kazembe",
      "email": "michaelkazembe@gmail.com",
      "url": "https://github.com/michaelkazembe"
    }
  },
  "host": "restaurants-api-iwx3.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/restaurants/": {
      "get": {
        "tags": ["Restaurants"],
        "summary": "Get all restaurants",
        "description": "Returns a list of all restaurants",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Successfully retrieved list of restaurants"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Restaurants"],
        "summary": "Create a new restaurant",
        "description": "Creates a new restaurant",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name", "cuisine", "location", "rating"],
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Ndiwo Restaurant"
                },
                "cuisine": {
                  "type": "string",
                  "example": "Malawian"
                },
                "location": {
                  "type": "string",
                  "example": "123 Main St, City, State"
                },
                "rating": {
                  "type": "number",
                  "example": 4
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/restaurants/{id}": {
      "get": {
        "tags": ["Restaurants"],
        "summary": "Get a restaurant by ID",
        "description": "Returns a restaurant by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Restaurant ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Restaurant Found"
          },
          "404": {
            "description": "Restaurant Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": ["Restaurants"],
        "summary": "Update a restaurant by ID",
        "description": "Updates a restaurant by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Restaurant ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Ndiwo Restaurant"
                },
                "cuisine": {
                  "type": "string",
                  "example": "Malawian"
                },
                "location": {
                  "type": "string",
                  "example": "123 Main St, City, State"
                },
                "rating": {
                  "type": "number",
                  "example": 4
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Restaurant Updated Successfully"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Restaurants"],
        "summary": "Delete a restaurant by ID",
        "description": "Deletes a restaurant by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Restaurant ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Restaurant Deleted Successfully"
          },
          "404": {
            "description": "Restaurant Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "description": "Returns a list of all users",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Successfully retrieved list of users"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "description": "Creates a new user",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["firstname", "lastname", "email", "age", "password", "address", "role"],
              "properties": {
                "firstname": {
                  "type": "string",
                  "example": "Michael"
                },
                "lastname": {
                  "type": "string",
                  "example": "Kazembe"
                },
                "email": {
                  "type": "string",
                  "example": "michael@example.com"
                },
                "age": {
                  "type": "string",
                  "example": "24"
                },
                "password": {
                  "type": "string",
                  "example": "qw2(ajaj"
                },
                "address": {
                  "type": "string",
                  "example": "123 Area 18A Lilongwe Malawi"
                },
                "role": {
                  "type": "string",
                  "enum": ["user", "admin"],
                  "example": "admin"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
