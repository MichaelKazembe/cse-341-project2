                },
                "address": {
                  "type": "string",
                  "example": "123 Area 18A Lilongwe Malawi"
                },
                "role": {
                  "type": "string",
                  "enum": ["user", "admin"],
                  "example": "admin"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User Updated Successfully"
